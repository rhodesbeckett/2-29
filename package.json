{
	"name": "svelte-commerce",
	"version": "2022.10.04",
	"private": true,
	"scripts": {
		"dev": "vite dev --host --port 3000",
		"build": "vite build",
		"start-node": "node build/index.js",
		"start": "NODE_ENV=production && vite preview --host --port 3000",
		"update": "npm exec -- npx ncu -u -p npm i",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"partytown": "partytown copylib static/~partytown",
		"gen:manifest": "node ./generate-manifest.js",
		"copy": "node devops/copy",
		"liveS": "node devops/deploy",
		"live": "run-s build copy liveS"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.90",
		"@sveltejs/kit": "1.0.0-next.567",
		"@tailwindcss/line-clamp": "^0.4.2",
		"@tailwindcss/typography": "^0.5.8",
		"@types/bcrypt": "^5.0.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"cookie": "^0.5.0",
		"cookie-universal": "^2.2.2",
		"cssnano": "^5.1.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"minio": "7.0.32",
		"npm-run-all": "4.1.5",
		"postcss": "^8.4.19",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"shelljs": "0.8.5",
		"ssh2shell": "2.0.6",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-confetti": "^1.2.2",
		"svelte-preprocess": "^4.10.7",
		"svelte-timeago": "0.1.2",
		"svelte-toasts": "^1.1.2",
		"tailwind-scrollbar": "2.0.1",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"tw-elements": "1.0.0-alpha13",
		"typescript": "~4.9.3",
		"vanilla-lazyload": "^17.8.3",
		"vite": "^3.2.4"
	},
	"dependencies": {
		"@sentry/svelte": "7.21.1",
		"@sentry/tracing": "7.21.1",
		"amazon-s3-uri": "^0.1.1",
		"aws-sdk": "^2.1263.0",
		"bcrypt": "^5.1.0",
		"dayjs": "^1.11.6",
		"hash-it": "^5.0.2"
	},
	"type": "module",
	"volta": {
		"node": "17.4.0",
		"yarn": "1.22.17",
		"pnpm": "6.32.1"
	}
}